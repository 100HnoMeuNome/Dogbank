<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="JsonConsole" target="SYSTEM_OUT">
            <JsonLayout compact="true" eventEol="true" properties="true" stacktraceAsString="true">
                <KeyValuePair key="service" value="${env:DD_SERVICE:-dogbank}"/>
                <KeyValuePair key="env" value="${env:DD_ENV:}"/>
                <KeyValuePair key="version" value="${env:DD_VERSION:}"/>
            </JsonLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="JsonConsole"/>
        </Root>
        
        <Logger name="com.dogbank" level="info" additivity="false">
            <AppenderRef ref="JsonConsole"/>
        </Logger>
        
        <Logger name="datadog.trace" level="debug"/>
        <Logger name="org.springframework" level="warn"/>
        <Logger name="org.hibernate" level="warn"/>
    </Loggers>
</Configuration>